<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainDisplay">

    <TextView
            style="@style/StudentName"
            android:layout_width="186dp"
            android:layout_height="36dp"
            android:text="@string/surname"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.294" android:textStyle="bold"
            tools:textColorHighlight="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/holo_red_dark" android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.58"/>
    <ImageView android:layout_width="52dp"
               android:layout_height="46dp"
               android:src="@drawable/gerb"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:contentDescription="Country flag"
               app:layout_constraintHorizontal_bias="0.977" app:layout_constraintVertical_bias="0.002"/>
    <ImageView android:layout_width="55dp"
               android:layout_height="46dp"
               android:src="@drawable/flag"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:contentDescription="Country flag"
               app:layout_constraintHorizontal_bias="0.76" app:layout_constraintVertical_bias="0.002"/>
    <View android:layout_width="227dp"
          android:layout_height="81dp"
          android:background="@drawable/rounded"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintHorizontal_bias="0.616" app:layout_constraintVertical_bias="0.604"/>
</android.support.constraint.ConstraintLayout>