<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="*"
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:id="@+id/multiple"
            style="@android:style/Widget.Button.Small" android:textSize="25sp" android:onClick="OnButtonMultipleClick"
            app:layout_constraintTop_toBottomOf="@+id/division"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="77dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="172dp"
            android:layout_marginEnd="144dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="-"
            android:layout_width="68dp"
            android:layout_height="40dp"
            style="@android:style/Widget.Button.Small" android:textSize="25sp"
            android:onClick="OnButtonDistractionClick"
            android:id="@+id/substraction"
            app:layout_constraintTop_toBottomOf="@+id/sum"
            android:layout_marginBottom="1dp" app:layout_constraintBottom_toTopOf="@+id/division"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="172dp"
            android:layout_marginEnd="144dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="/"
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:id="@+id/division"
            style="@android:style/Widget.Button.Small" android:textSize="24sp" android:onClick="OnButtonDivisionClick"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/substraction"
            app:layout_constraintBottom_toTopOf="@+id/multiple" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="172dp" android:layout_marginEnd="144dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num1"
            android:hint="First number" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp" android:layout_marginEnd="144dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="51dp" app:layout_constraintBottom_toTopOf="@+id/num2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num2"
            android:hint="Second number" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" android:layout_marginBottom="47dp"
            app:layout_constraintBottom_toTopOf="@+id/result" android:layout_marginEnd="144dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="51dp"
            app:layout_constraintTop_toBottomOf="@+id/num1"/>
    <TextView
            android:text="TextView"
            android:layout_width="73dp"
            android:layout_height="39dp"
            android:id="@+id/result" tools:text="Result" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="210dp"
            app:layout_constraintEnd_toStartOf="@+id/sum" android:layout_marginEnd="74dp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/num2"
            app:layout_constraintHorizontal_bias="0.4"/>
    <Button
            android:text="+"
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:id="@+id/sum"
            style="@android:style/Widget.Button.Small" android:textSize="24sp" android:onClick="OnButtonSumClick"
            app:layout_constraintBottom_toTopOf="@+id/substraction"
            android:layout_marginTop="45dp" app:layout_constraintTop_toBottomOf="@+id/num2"
            android:layout_marginEnd="144dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/result"/>
</android.support.constraint.ConstraintLayout>